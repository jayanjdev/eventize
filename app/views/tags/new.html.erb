
<h2> Added Event Tag </h2>

<div class="row-fluid">
  <strong>Description: </strong> 
  <span class='span1'>
    <%= @event.description %>
  </span>
</div>
<div class="row-fluid">
  <strong>Existing tag: </strong> 
  <span class='existing_tags'>
    <%= @event.all_tags.join(', ')%>
  </span>
</div>
<div class="row-fluid">
</div>
  <%= form_tag event_tags_path(:event_id => @event.id), :method => :post do  %>
    <strong>New tag: </strong> <%= text_field_tag :tag  %>
   <%= submit_tag 'Save' %>
  <%end  %>
</div>
