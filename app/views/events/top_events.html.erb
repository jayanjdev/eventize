<table class='table'>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class='span1'><%= event.description %>
        <%= link_to  new_event_path(:description => event.description ), class: 'link_new' do %>
            <span class="glyphicon glyphicon-edit"> </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
