<table class='table'>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td class='span1'><%= link_to event.description, event %>
          <%= link_to  edit_event_path(event), class: 'link_new' do %>
            <span class="glyphicon glyphicon-edit"> </span>
          <% end %>
          <%= link_to event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'link_remove' do %>
            <span class="glyphicon glyphicon-remove"> </span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
